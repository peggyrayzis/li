{
  "name": "@peggyrayzis/li",
  "version": "0.1.0",
  "description": "A CLI for LinkedIn. Cookie auth, Voyager API, agent-friendly.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "li": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "li": "node dist/cli.js",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "de-slop": "bash .claude/hooks/de-slop.sh",
    "pre-commit": "bash .claude/hooks/pre-commit.sh",
    "validate": "pnpm typecheck && pnpm lint && pnpm test:run && pnpm de-slop"
  },
  "keywords": [
    "linkedin",
    "cli",
    "voyager",
    "api"
  ],
  "author": "Peggy Rayzis",
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/node": "^25.2.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@steipete/sweet-cookie": "^0.1.0",
    "commander": "^14.0.3",
    "dotenv": "^17.2.3",
    "json5": "^2.2.3",
    "picocolors": "^1.1.1"
  }
}
